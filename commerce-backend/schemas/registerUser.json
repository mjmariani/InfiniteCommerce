{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "username": "chrome2x",
            "password": "pass",
            "firstName": "Kevin",
            "lastName": "Markson",
            "email": "markson@gmail.com",
            "isAdmin": "False"
        }
    ],
    "required": [
        "username",
        "password",
        "firstName",
        "lastName",
        "email"
    ],
    "properties": {
        "username": {
            "$id": "#/properties/username",
            "type": "string",
            "title": "The username schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "chrome2x"
            ]
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "title": "The password schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "pass"
            ]
        },
        "firstName": {
            "$id": "#/properties/firstName",
            "type": "string",
            "title": "The firstName schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Kevin"
            ]
        },
        "lastName": {
            "$id": "#/properties/lastName",
            "type": "string",
            "title": "The lastName schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Markson"
            ]
        },
        "email": {
            "$id": "#/properties/email",
            "default": "",
            "description": "An explanation about the purpose of this instance.",
            "examples": [
                "markson@gmail.com"
            ],
            "title": "The email schema",
            "type": "string",
            "format": "email"
        },
        "isAdmin": {
            "$id": "#/properties/isAdmin",
            "default": "",
            "description": "boolean value of isAdmin; not required",
            "examples": [
                "False"
            ],
            "title": "The isAdmin schema",
            "type": "boolean"
            
        }
    },
    "additionalProperties": true
}